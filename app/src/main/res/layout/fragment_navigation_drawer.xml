<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:clickable="true"
    tools:context=".fragment.NavigationDrawerFragment">


    <FrameLayout
        android:id="@+id/containerDrawerImage"
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:background="@drawable/drawer" />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/docu" />

        <com.pkmmte.view.CircularImageView
            android:layout_marginTop="50dp"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_abstract"
            app:border="false"
            app:border_color="#EEEEEE"
            app:border_width="4dp"
            android:id="@+id/profilephoto"
            app:shadow="true" />

        <TextView
            android:layout_height="24dp"
            android:layout_width="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="135dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:text="Nilesh Parshetti"></TextView>
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_below="@id/containerDrawerImage"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>



</RelativeLayout>
